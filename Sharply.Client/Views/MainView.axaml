<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sharply.Client.Views.MainView">
  
	<Grid>
		<!-- Main layout with columns for server list, channel list, and chat window -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<!-- Server list -->
			<ColumnDefinition Width="100"/>
			<!-- Channel list -->
			<ColumnDefinition Width="*"/>
			<!-- Chat window -->
		</Grid.ColumnDefinitions>

		<!-- Server List -->
		<StackPanel Grid.Column="0" Background="#333" Margin="10">
			<TextBlock Text="Servers" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
			<!-- <ItemsControl Items="{Binding Servers}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding Name}" Command="{Binding DataContext.SelectServerCommand, Source={RelativeSource AncestorType=Window}}"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Button Content="Add Server" Command="{Binding AddServerCommand}" Margin="0,10,0,0"/> -->
		</StackPanel>

		<!-- Channel List -->
		<StackPanel Grid.Column="1" Background="#444" Margin="0,10,15,10">
			<TextBlock Text="Global" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
			<!-- <TextBlock Text="{Binding SelectedServer.Name}" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/> -->
			<!-- <ItemsControl Items="{Binding Channels}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Button Content="{Binding Name}" Command="{Binding DataContext.SelectChannelCommand, Source={RelativeSource AncestorType=Window}}"/>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl> -->
		</StackPanel>

		<!-- Chat Window -->
		<Grid Grid.Column="2" Background="#222" Margin="0,10,10,10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<!-- Chat messages -->
				<RowDefinition Height="Auto"/>
				<!-- Message input -->
			</Grid.RowDefinitions>

			<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
				<!-- <ItemsControl Items="{Binding Messages}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBlock Text="{Binding Content}" Foreground="White" Margin="0,0,0,5"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl> -->
			</ScrollViewer>

			<StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10">
				<TextBox Text="placeholder" Width="400"/>
				<!-- <Button Content="Send" Command="{Binding SendMessageCommand}"/> -->
				<Button Content="Send" />
			</StackPanel>
		</Grid>
	</Grid>

</UserControl>
