<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:behaviors="clr-namespace:Sharply.Client.Behaviors"
             xmlns:viewModels="using:Sharply.Client.ViewModels"
			 xmlns:converters="using:Sharply.Client.Converters"
			 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             x:Class="Sharply.Client.Views.ServerContentView"
             x:DataType="viewModels:MainViewModel">

	<UserControl.Resources>
		<converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
		<converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" />
	</UserControl.Resources>


	<Grid>
		<Grid.ColumnDefinitions>
			<!-- Channels -->
			<ColumnDefinition Width="140" />
			<!-- Chat Window -->
			<ColumnDefinition Width="*" />
			<!-- Online users -->
			<ColumnDefinition Width="160" />
		</Grid.ColumnDefinitions>

		<!-- Channels List -->
		<Border Grid.Column="0" Background="{DynamicResource InputBackgroundBrush}" Margin="5" CornerRadius="8">
			<Grid>
				<Grid.RowDefinitions>
					<!-- Header Text -->
					<RowDefinition Height="Auto" />
					<!-- Underline -->
					<RowDefinition Height="Auto" />
					<!-- ListBox -->
					<RowDefinition Height="*" />
					<!-- Button -->
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<!-- Header Text -->
				<TextBlock Grid.Row="0"
						   Text="Channels"
						   Foreground="{DynamicResource PrimaryTextBrush}"
						   FontWeight="Bold"
						   Margin="10,10,10,5"
						   FontSize="16" />

				<!-- "Underline" with listbox-->
				<Border Grid.Row="1"
						Height="1"
						Background="{DynamicResource AccentBrush}"
						Margin="10,0,10,10" />
					
				<!-- ListBox -->
				<ListBox Grid.Row="2"
						 ItemsSource="{Binding ChannelList.Channels}"
						 SelectedItem="{Binding ChannelList.SelectedChannel}"
						 Background="{DynamicResource InputBackgroundBrush}"
						 Foreground="{DynamicResource PrimaryTextBrush}"
						 Margin="10,0,10,10"
						 SelectionMode="Single">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"
									   VerticalAlignment="Center"
									   HorizontalAlignment="Left"
									   FontSize="12"
									   Foreground="{DynamicResource PrimaryTextBrush}">
								<TextBlock.Styles>
									<Style Selector="TextBlock:hover">
										<Setter Property="Background" Value="{DynamicResource SecondaryAccentBrush}" />
										<Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
									</Style>
								</TextBlock.Styles>
							</TextBlock>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>

				<!-- Button -->
				<Button Grid.Row="3"
						Content="Server Settings"
						IsVisible="{Binding IsCurrentUserServerOwner, Converter={StaticResource BoolToVisibilityConverter}}"
						Background="{DynamicResource AccentBrush}"
						Foreground="{DynamicResource PrimaryTextBrush}"
						Margin="10"
						Padding="5"
						Command="{Binding OpenServerSettingsCommand}"
						HorizontalAlignment="Center"
						VerticalAlignment="Bottom"
						CornerRadius="4"/>
			</Grid>
		</Border>


		<!-- Chat Window -->
		<Border Grid.Column="1" Background="{DynamicResource InputBackgroundBrush}" Margin="5" CornerRadius="8">
			<Grid>
				<Grid.RowDefinitions>
					<!-- Display Name -->
					<RowDefinition Height="Auto" />
					<!-- Chat Messages -->
					<RowDefinition Height="*" />
					<!-- Message Input -->
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<!-- Channel Display Name -->
				<TextBlock Grid.Row="0"
						   Text="{Binding ChannelDisplayName}"
						   Foreground="{DynamicResource PrimaryTextBrush}"
						   FontWeight="Bold"
						   Margin="10,10,10,5"
						   FontSize="16" />

				<!-- Chat Messages -->
				<ScrollViewer Grid.Row="1"
							  x:Name="ChatScrollViewer"
							  VerticalScrollBarVisibility="Auto"
							  Margin="10"
							  Padding="0,0,10,0">
					<Interaction.Behaviors>
						<behaviors:ScrollToEndBehavior ItemsSource="{Binding ChannelList.Messages}" />
					</Interaction.Behaviors>
					<ItemsControl ItemsSource="{Binding ChannelList.Messages}">
						<ItemsControl.ItemTemplate>
							<DataTemplate>
								<StackPanel Margin="0, 0, 0, 10">
									<!-- Header Row: Username and Timestamp -->
									<DockPanel LastChildFill="False" Margin="0,0,0,5" MinWidth="300">
										<!-- Username -->
										<TextBlock Text="{Binding Username}"
												   FontWeight="Bold"
												   Foreground="{DynamicResource PrimaryAccentBrush}"
												   VerticalAlignment="Center"
												   FontSize="14"
												   DockPanel.Dock="Left" />

										<!-- Timestamp -->
										<TextBlock Text="{Binding Timestamp, StringFormat={}{0:hh:mm tt}}"
												   Foreground="{DynamicResource SecondaryTextBrush}"
												   VerticalAlignment="Center"
												   FontSize="12"
												   Margin="10,0,0,0"
												   DockPanel.Dock="Right" />
									</DockPanel>

									<!-- Message Content -->
									<TextBlock Text="{Binding Content}"
											   Foreground="{DynamicResource PrimaryTextBrush}"
											   TextWrapping="Wrap"
											   Margin="20,0,0,0"
											   FontSize="14" />
								</StackPanel>
							</DataTemplate>
						</ItemsControl.ItemTemplate>
					</ItemsControl>
				</ScrollViewer>

				<!-- Message Input -->
				<Grid Grid.Row="2" Margin="10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="Auto" />
					</Grid.ColumnDefinitions>
					<TextBox Grid.Column="0"
							 Text="{Binding NewMessage, UpdateSourceTrigger=PropertyChanged}"
							 Watermark="Type your message..."
							 Background="{DynamicResource InputBackgroundBrush}"
							 Foreground="{DynamicResource PrimaryTextBrush}"
							 BorderBrush="{DynamicResource AccentBrush}"
							 BorderThickness="1"
							 CornerRadius="4"
							 VerticalAlignment="Center"
							 KeyDown="MessageInput_KeyDown"
							 Margin="0,0,10,0" />
					<Button Grid.Column="1"
							Content="Send"
							Command="{Binding SendMessageCommand}"
							Background="{DynamicResource AccentBrush}"
							Foreground="{DynamicResource PrimaryTextBrush}"
							Padding="10,5"
							CornerRadius="4"
							VerticalAlignment="Center"
							HorizontalAlignment="Right"/>
				</Grid>
			</Grid>
		</Border>

		<!-- Online Users -->
		<Border Grid.Column="2" Background="{DynamicResource InputBackgroundBrush}" Margin="5" CornerRadius="8">
			<Grid>
				<Grid.RowDefinitions>
					<!-- Header Text -->
					<RowDefinition Height="Auto" />
					<!-- Underline -->
					<RowDefinition Height="Auto" />
					<!-- ListBox -->
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0"
						   Text="Online Users" 
						   Foreground="{DynamicResource PrimaryTextBrush}" 
						   FontWeight="Bold" 
						   Margin="10,10,10,5" 
						   FontSize="16"/>

				<!-- Underline -->
				<Border Grid.Row="1"
						Height="1"
						Background="{DynamicResource AccentBrush}"
						Margin="10,0,10,10" />

				<!-- Actual listbox -->
				<ListBox Grid.Row="2"
						 ItemsSource="{Binding UserList.OnlineUsers}"
                         Background="{DynamicResource InputBackgroundBrush}"
                         Foreground="{DynamicResource PrimaryTextBrush}"
                         Margin="10,0,10,10"
                         SelectionMode="Single">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Username}" />
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</Border>
	</Grid>
</UserControl>
